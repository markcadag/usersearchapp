<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <%= form_with url: users_path, method: :get, data: { turbo_frame: "search-results", turbo_action: "advance", controller: "search", action: "input->search#search"  } do |form| %>
    <%= form.text_field :query, id: "query", class: "block w-full", placeholder: "Search users" %>
  <% end %>

</h1>

  <div id="users" class="min-w-full">
    <%= turbo_frame_tag "search-results" do %>
      <%= render partial: 'users/user_list', locals: { users: @users } %>
    <% end %>
  </div>
</div>
